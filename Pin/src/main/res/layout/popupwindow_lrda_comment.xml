<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/comment_dialog_backgroud_shape"
    android:orientation="horizontal"
    >
        <!--获取焦点，自动弹出软键盘-->
        <EditText
            android:id="@+id/edt_AddComment_Pop_LRDA"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:background="@drawable/selector_comment_tvbg"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/text_color_hint"
            android:textSize="18sp"
            android:hint="说点什么吧..."
            />

        <TextView
            android:id="@+id/tv_SendComment_Pop_LRDA"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_sendbt_gray"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:textSize="14sp"
            android:textColor="@color/text_color_hint"
            android:text="发送"
            />
</LinearLayout>

