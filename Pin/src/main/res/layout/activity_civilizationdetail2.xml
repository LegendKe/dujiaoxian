<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".activity.CivilizationDetailActivity">

    <RelativeLayout
        android:id="@+id/title"
        style="@style/title">

        <LinearLayout
            android:id="@+id/ll_Back_CivilizationDetail"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/img_Title_CivilizationDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="详情"
            style="@style/title_text" />
    </RelativeLayout>

    <com.djx.pin.myview.MyScrollView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="60dp"
        android:id="@+id/msv_ScrollView_CDA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/title"
        android:descendantFocusability="blocksDescendants"
        android:scrollbars="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.djx.pin.myview.CircleImageView
                        android:id="@+id/cimg_Avatar_CDA"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_defualtavater" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_UserName_CDA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小明"
                            android:textColor="@color/text_color_black"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_Time_CDA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4小时前"
                                style="@style/text_28px_hint" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_reward"
                        />
                    <TextView
                        android:layout_marginRight="20dp"
                        android:id="@+id/tv_Reward_CivilizationDetail"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/text_color_focused"
                        android:text="3000元"
                        />
                    <TextView
                        android:id="@+id/tv_QiangDan_CivilizationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="抢单"
                        android:background="@drawable/ic_qiandanbg"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_HelperType1_LifeReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="ssssssssssssssssssss"
                android:textColor="@color/text_color_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_HelperAbout_CDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text=""
                style="@style/text_28px_hint" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/img_Imge2_1_CivilizationDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:scaleType="centerCrop"
                    />
                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >

                </View>
                <ImageView
                    android:id="@+id/img_Imge2_2_CivilizationDetail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"

                    android:scaleType="centerCrop"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Location_CDA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_location" />

                <TextView
                    android:id="@+id/tv_Location_CDA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="北京"
                    style="@style/text_28px_hint" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ViewGroup1_CDA"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_Top_CivilizationDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_ShareDetail_CDA"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="分享 7892"
                                style="@style/content_text" />

                            <View
                                android:id="@+id/v_ShareLine_CDA"
                                android:layout_width="wrap_content"
                                android:layout_height="3dp"
                                android:layout_gravity="bottom"
                                android:background="@color/text_color_focused"
                                >

                            </View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_CommentDetail_CDA"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="评论 7892"
                                style="@style/content_text" />

                            <View
                                android:id="@+id/v_CommentLine_CDA"
                                android:layout_width="100dp"
                                android:layout_height="3dp"
                                android:layout_gravity="bottom"
                                android:background="@color/text_color_focused"
                                android:visibility="invisible">

                            </View>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_color"
                        >
                    </View>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/lv_Share_CivilizationDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>


                <ListView
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/lv_Comment_CivilizationDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </ListView>
            </LinearLayout>
    </com.djx.pin.myview.MyScrollView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ll_ViewGroup2_CDA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:gravity="center_vertical"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:background="@color/gray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >
       <LinearLayout
           android:id="@+id/ll_Share_CDA"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="match_parent"
           android:orientation="horizontal"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@mipmap/ic_share"
               />
           <TextView
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="分享"
               style="@style/detail_bottom_text"
               />
       </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/line_color2"
            >

        </View>
        <LinearLayout
            android:id="@+id/ll_Comment_CDA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_comment"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="评论"
                style="@style/detail_bottom_text"
                />
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/line_color2"
            >

        </View>
        <LinearLayout
            android:id="@+id/ll_Chat_CDA"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_chat"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="私信"
                style="@style/detail_bottom_text"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/v_ParentCover_CDA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_black"
        android:visibility="gone"
        >
    </View>
</RelativeLayout>