<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        style="@style/style_view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/padding_left2right"
        android:layout_marginRight="@dimen/padding_left2right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_min_price"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/gray"
            style="@style/content_text"
            android:textSize="12sp"
            android:hint="价格区间(元)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  -  "
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_max_price"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textSize="12sp"
            android:hint="价格区间(元)"
            style="@style/content_text"  />
        <Button
            android:id="@+id/bt_confirm_dialog_order_price"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:textColor="@color/blue"
            android:background="@drawable/shap_hollow_blue"
            android:layout_marginLeft="20dp"
            android:text="确认" />
    </LinearLayout>

    <View
        style="@style/style_view_line"/>
</LinearLayout>

