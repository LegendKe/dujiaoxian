<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        >
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <com.djx.pin.myview.CircleImageView
                android:id="@+id/cimg_Avatar4_Civilization"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_defualtavater"
                />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_UserName4_Civilization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/content_text"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_Time4_Civilization"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="15sp"
                        android:textColor="@color/text_color_hint"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_reward"
                />
            <TextView
                android:id="@+id/tv_Reward4_Civilization"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_color_focused"
                android:text="3000元"
                />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_lightgray"
        android:layout_marginBottom="@dimen/margin2line_space"
        android:visibility="gone"
        />
    <TextView
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_HelperType4_Civilization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_color_black"
        android:textSize="18sp"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_HelperAbout4_Civilization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        style="@style/text_content_30_black"
        android:maxLines="3"
        android:ellipsize="end"
        />
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_Imge4_1_Civilization"
                android:layout_width="120dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"

                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                >
            </View>
            <ImageView
                android:id="@+id/img_Imge4_2_Civilization"
                android:layout_width="120dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            >
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/img_Imge4_3_Civilization"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                >
            </View>
            <ImageView
                android:id="@+id/img_Imge4_4_Civilization"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_Location4_Civilization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/tv_Location4_Civilization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            style="@style/text_24px_hint"
            android:drawableLeft="@mipmap/ic_location"
            android:drawablePadding="5dp"/>
    </LinearLayout>
    <include
        layout="@layout/tab_share_comment_chat"/>
</LinearLayout>