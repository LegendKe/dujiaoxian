<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    tools:context=".activity.HelpOfflineUpdataActivity">

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@mipmap/ic_topbg">

        <LinearLayout
            android:id="@+id/ll_back"
            style="@style/button_selector"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_left2right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_back"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                style="@style/title_text"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_titl_windowthrow_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tv_title_realhelp_activity"
            style="@style/title_text" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_searh_position"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/gray"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:paddingRight="@dimen/margin_left2right">

                    <TextView
                        android:id="@+id/tv_position"
                        style="@style/content_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/tv_location" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_right" />
                </RelativeLayout>

                <View style="@style/style_view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_2"
                        style="@style/content_text"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_pay" />

                    <EditText
                        android:id="@+id/et_money"
                        style="@style/content_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_2"
                        android:layout_weight="0.7"
                        android:background="@color/white"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:hint="单位:  元  "
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColorHint="#aaa" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.3" />
                </LinearLayout>

                <View style="@style/style_view_line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_3"
                        style="@style/content_text"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="需要人手" />

                    <EditText
                        android:id="@+id/et_people_number"
                        style="@style/content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_3"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:inputType="number"
                        android:text="1" />
                </RelativeLayout>

                <View style="@style/style_view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:paddingRight="@dimen/margin_left2right">

                    <TextView
                        android:id="@+id/tv_4"
                        style="@style/content_text"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="开始时间" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/content_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_4"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请点击选择时间" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>

                <View style="@style/style_view_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:paddingRight="@dimen/margin_left2right">

                    <TextView
                        android:id="@+id/tv_5"
                        style="@style/content_text"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="结束时间" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        style="@style/content_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_4"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:hint="请点击选择时间" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_right" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/style_view_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingLeft="@dimen/margin_left2right"
                    android:paddingRight="@dimen/margin_left2right"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tv_6"
                        style="@style/content_text"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="悬赏事项" />

                    <EditText
                        android:id="@+id/et_note"
                        style="@style/content_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_6"
                        android:background="@color/white"
                        android:gravity="top|left"
                        android:hint="请详细描述悬赏事项,不超过1000字"
                        android:maxLength="1000"/>
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tip"
                    style="@style/content_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_left2right"
                    android:layout_marginTop="5dp"
                    android:text="选择图片  (可选)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tip"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="2" />

                    <ImageView
                        android:id="@+id/iv_AddPic0"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_AddPic1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/iv_AddPic2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_background" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="2" />
                </LinearLayout>
            </RelativeLayout>
            <View style="@style/style_view_line" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/margin_left2right"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    style="@style/content_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发榜范围    50公里" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_updatainfo"
                style="@style/button_background_round_full"
               android:layout_margin="@dimen/padding_left2right"
                android:layout_weight="1"
                android:text="发送" />
            <TextView
                android:id="@+id/tv_help_word"
                style="@style/text_24px_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_left2right"
                android:layout_marginBottom="40dp"
                android:text="@string/help_word"
                android:textColorLink="@color/blue"
                android:linksClickable="true"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
