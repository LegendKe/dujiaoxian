<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_cardview">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginRight="@dimen/padding_left2right"
            android:layout_marginLeft="@dimen/padding_left2right"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <com.djx.pin.myview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/tv_content"
                style="@style/textview_15sp_black"
                android:layout_height="wrap_content"
                android:text="内容"
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/tv_money"
                android:maxLines="2"
                android:lines="2"
                android:paddingBottom="5dp"/>
            <TextView
                android:id="@+id/tv_address"
                style="@style/textview_12sp_hint"
                android:text=""
                android:layout_toRightOf="@+id/iv_avatar"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_content"
                android:drawableLeft="@mipmap/ic_location"
                android:drawablePadding="5dp"
                />

            <TextView
                android:id="@+id/tv_distance"
                style="@style/textview_12sp_hint"
                android:layout_toRightOf="@+id/tv_address"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_content"
                android:text="2km" />

            <TextView
                android:id="@+id/tv_money"
                android:text="money"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="5dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>