<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ordertype"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_order_all"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_all"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部分类" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:background="@color/listview_line_color">

    </View>

    <LinearLayout
        android:id="@+id/ll_order_intelligent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_intelligent"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能排序" />

        <ImageView
            android:id="@+id/iv_order_intelligent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_downopen" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:background="@color/listview_line_color">

    </View>

    <LinearLayout
        android:id="@+id/ll_order_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_price"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额选择" />

        <ImageView
            android:id="@+id/iv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_downopen" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="30dp"
        android:background="@color/listview_line_color"></View>
</LinearLayout>

