<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ordertype"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_order_all"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_all"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部分类"
            android:textColor="@color/textview_color_white2blue"
            />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/listview_line_color"
        android:layout_gravity="center_vertical">

    </View>

    <LinearLayout
        android:id="@+id/ll_order_intelligent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_intelligent"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能排序"
            android:textColor="@color/textview_color_white2blue"/>

        <ImageView
            android:id="@+id/iv_order_intelligent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_downopen" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/listview_line_color"
        android:layout_gravity="center_vertical">

    </View>

    <LinearLayout
        android:id="@+id/ll_order_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_price"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额选择"
            android:textColor="@color/textview_color_white2blue"/>

        <ImageView
            android:id="@+id/iv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_downopen" />
    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/listview_line_color"
        android:layout_gravity="center_vertical">

    </View>

    <LinearLayout
        android:id="@+id/ll_order_distance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_distance"
            style="@style/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离选择 "
            android:textColor="@color/textview_color_white2blue"/>

        <ImageView
            android:id="@+id/iv_order_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_downopen" />
    </LinearLayout>


</LinearLayout>