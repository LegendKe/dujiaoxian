<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        >
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/padding_left2right"
            android:paddingRight="@dimen/padding_left2right"
            android:src="@mipmap/ic_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title_text"
            android:text="芝麻信用授权"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#02cda0"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left2right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_zhima_max"
            android:text="芝麻信用"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_left2right"
        android:text="请填写您的个人信息并接受如下内容:"
        style="@style/text_32px_black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_left2right"
        android:text="@string/zhima_introduce"
        style="@style/text_28px_hint"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="20dp"/>

    <include layout="@layout/line_layout"/>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/text_32px_light_black"
        android:hint="请输入姓名.."
        android:layout_marginLeft="@dimen/padding_left2right"
        android:layout_marginRight="@dimen/padding_left2right"
        android:background="@null"/>
    <include layout="@layout/line_layout"/>
    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        style="@style/text_32px_light_black"
        android:hint="请输入身份证号.."
        android:layout_marginLeft="@dimen/padding_left2right"
        android:layout_marginRight="@dimen/padding_left2right"
        android:background="@null"
        android:inputType="number"
        />
    <include layout="@layout/line_layout"/>
    <Button
        android:id="@+id/btn_confirm"
        style="@style/button_background_round_full_green"
        android:layout_marginLeft="@dimen/padding_left2right"
        android:layout_marginRight="@dimen/padding_left2right"
        android:layout_marginTop="30dp"
        android:text="同意授权"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="芝麻信用，版权所有"
        android:gravity="center"
        style="@style/text_28px_hint"
        android:layout_marginTop="20dp"/>
</LinearLayout>