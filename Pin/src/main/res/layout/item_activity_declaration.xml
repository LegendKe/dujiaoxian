<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_declaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1295f7"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_left2right">

            <TextView
                android:id="@+id/item_tv_time_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sssss"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_name_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_tv_time_declaration"
                android:layout_centerVertical="true"
                android:text="name"
                android:textColor="#fff"
                android:textSize="15sp" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/item_name_declaration"
                android:layout_marginTop="10dp"
                android:background="#ddd" />

            <TextView
                android:id="@+id/item_reason_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:layout_marginTop="10dp"
                android:text="reason"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_tv_ducument_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_reason_declaration"
                android:layout_marginBottom="10dp"
                android:text="相关附件: "
                android:textColor="#fff"
                android:textSize="15sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_reason_declaration"
                android:layout_toRightOf="@+id/item_tv_ducument_declaration">

                <LinearLayout
                    android:id="@+id/ll_imgs"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingTop="10dp">
                </LinearLayout>
            </HorizontalScrollView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>