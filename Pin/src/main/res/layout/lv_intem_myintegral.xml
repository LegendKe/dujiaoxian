<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <com.djx.pin.myview.CircleImageView
        android:id="@+id/cimg_Avatar_MWA"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_toRightOf="@+id/cimg_Avatar_MWA"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Things_MWA"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="求助" />

        <TextView
            android:id="@+id/tv_Reason_MWA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="消费奖励"
            android:textColor="@color/text_color_normal"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical|right"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_GotWithdraw_MWA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="积分+100"
                android:textColor="@color/text_color_focused"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_Time_MWA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_color_normal"
                android:textSize="14sp"
                android:text="2小时前"
                />
    </LinearLayout>

</LinearLayout>