<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/bt_test1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录账号中国移动"/>
    <Button
        android:id="@+id/bt_test2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录账号中国联通"/>
    <Button
        android:id="@+id/bt_test3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始和中国移动聊天"/>
    <Button
        android:id="@+id/bt_test4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始和中国联通聊天"/>
    <Button
        android:id="@+id/bt_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始支付"/>

    <Button
        android:id="@+id/bt_test5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到Test2Activity"/>

