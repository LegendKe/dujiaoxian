<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="分享到"
            android:textColor="@color/text_color_black"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left2right"
            android:layout_marginRight="@dimen/margin_left2right"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_pin"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/img_WeiXin_SharePop_LRDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/login_weixin" />

            <ImageView
                android:id="@+id/img_WeiXinF_SharePop_LRDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_share_wxf" />

            <ImageView
                android:id="@+id/img_QQ_SharePop_LRDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/login_qq" />

            <ImageView
                android:id="@+id/img_XinLang_SharePop_LRDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/login_xinlang" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_Cancle_SharePop_LRDA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_color_black"
        android:textSize="18sp"
        android:padding="10dp" />

</LinearLayout>