<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:visibility="gone">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_declaration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#dfdfdf"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_left2right">

            <TextView
                android:id="@+id/item_tv_time_declaration"
                style="@style/text_28px_light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..." />

            <TextView
                android:id="@+id/item_name_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="客服已介入"
                android:textColor="#666"
                android:textSize="15sp"
                android:layout_below="@+id/item_tv_time_declaration"/>
            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@+id/item_name_declaration"
                android:background="#999" />

            <TextView
                android:id="@+id/item_reason_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:layout_marginTop="10dp"
                android:text="@string/customer_service"
                android:textColor="#666"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>