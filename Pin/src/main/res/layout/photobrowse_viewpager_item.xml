<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/vp_photobrowse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </uk.co.senab.photoview.PhotoView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        style="@style/button_selector"
        android:orientation="horizontal"
        >
        <com.djx.pin.myview.CircleImageView
            android:id="@+id/iv_usericon_photobrowse"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_defualtavater"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/tv_userName_photobrowse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userName"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_usericon_photobrowse"
            />
    </LinearLayout>


</LinearLayout>